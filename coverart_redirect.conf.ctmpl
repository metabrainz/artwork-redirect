{{- define "KEY" -}}
    {{ key (printf "docker-server-configs/CAA-Redirect/config.%s.json/%s" (env "DEPLOY_ENV") .) }}
{{- end -}}

{{if service "postgres-master"}}
{{with index (service "postgres-master") 0}}
[database]
